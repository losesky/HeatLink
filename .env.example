# Database settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/heatlink
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/heatlink_test

# Redis settings
REDIS_URL=redis://localhost:6379/0

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Application settings
APP_NAME=HeatLink
APP_VERSION=0.1.0
APP_DESCRIPTION="Multi-Source News Aggregation System"
DEBUG=true
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# News source settings
# 10 minutes
DEFAULT_UPDATE_INTERVAL=600
# 5 minutes
DEFAULT_CACHE_TTL=300 